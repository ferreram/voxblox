<?xml version="1.0" encoding="ISO-8859-15"?>
<launch>
  <!-- <arg name="play_bag" default="true" />
  <arg name="bag_file" default="/path/to/RS_d1_30Hz.bag"/> -->
  <arg name="voxel_size" default="0.02"/>

  <!-- These are the datasets from http://www.v4rl.ethz.ch/research/datasets-code/V4RL-Dense-Reconstruction-Dataset.html -->

  <node name="voxblox_node" pkg="voxblox_ros" type="tsdf_server" output="screen" args="--alsologtostderr" clear_params="true">
    <remap from="pointcloud" to="/ov2slam_node/dense_point_cloud"/>
    <param name="tsdf_voxel_size" value="$(arg voxel_size)" />
    <param name="tsdf_voxels_per_side" value="16" />
    <param name="voxel_carving_enabled" value="true" />
    <param name="truncation_distance" value="0.1" />
    <param name="color_mode" value="color" />
    <!-- <param name="use_tf_transforms" value="false" /> -->
    <param name="world_frame" value="world"/>
    <param name="update_mesh_every_n_sec" value="60.0" />
    <param name="verbose" value="true" />
    <param name="method" value="fast" />
    <param name="min_time_between_msgs_sec" value="0.05" />
    <param name="max_ray_length_m" value="8." />

    <!-- <rosparam file="$(find voxblox_ros)/cfg/rgbd_dataset.yaml"/> -->

    <param name="mesh_filename" value="$(find voxblox_ros)/mesh_results/$(anon hyperspectral).ply" />
  </node>
</launch>
